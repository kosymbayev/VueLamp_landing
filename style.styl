dark_color = #1d2026
green_color = #00986f
grey_color = #efefef

*
    margin 0
    padding 0
    font-family 'poppins', sans-serif
    box-sizing border-box

body
    min-width 320px

img
    user-select none

.main
    min-height 100vh
    width 100%
    background grey_color

nav
    display flex
    align-items center
    padding 20px 8%
    background dark_color

    .menu_img
        width 25px
        margin-right 10px
        cursor pointer

    .logo
        width 160px
        cursor pointer

    ul
        flex 1
        text-align center
        li
            display inline-block
            list-style none
            margin 0 20px
        a
            text-decoration none
            color #fff

    button
        background grey_color
        height 30px
        width 60px
        border-radius 20px
        border 0
        outline 0
        cursor pointer
        transition background 0.5s, margin-left 0.5s
        span
            display block
            background #999
            height 26px
            width 26px
            border-radius 50%
            margin-left 2px
            transition background 0.5s, margin-left 0.5s

.lamp_container
    position absolute
    top -20px
    left 22%
    width 200px

    .lamp
        width 100%

    .light
        position absolute
        top 97%
        left 50%
        transform translateX(-50%)
        width 700px
        margin-left -10px
        opacity 0
        transition opacity 0.5s

.text_container
    max-width 600px
    margin-top 7%
    margin-left 48%

    h1
        font-size 80px
        font-weight 400
    a
        text-decoration none
        background green_color
        padding 14px 40px
        display inline-block
        color #fff
        font-size 18px
        margin-top 30px
        border-radius 30px

// Dark
body.dark
    .main
        background dark_color
        color #fff

    button
        background green_color
        span
            background #fff
            margin-left 31px

    .light
        opacity 1 !important

// Media
@media screen and (min-width: 1029px)
    nav 
        .close
            display none
        .menu_img
            display none

@media screen and (max-width: 1028px)
    nav
        .logo
            z-index 3
        ul
            position: absolute;
            top 0
            left -200px
            display: flex;
            flex-direction: column;
            text-align left
            z-index 10
            opacity 0.98
            transition left 0.5s
            &.active
                left 0
            li
                display block
                margin 0
            a
                display block
                text-decoration: none;
                padding: 14px 5px 14px 14px
                background: dark_color;
                display: block;
                min-width: 200px;
                font-size 17px
            .close
                position relative
                &:before
                &:after
                    content ''
                    position absolute
                    top 16px
                    left 70px
                    width 2px 
                    height 14px
                    background #fff
                    border-radius 5px
                    cursor pointer
                &:before
                    transform rotate(45deg)
                &:after
                    transform rotate(135deg)
        button
            margin-left: auto;


    .lamp_container
        left: 15%;
        width: 160px;

    .text_container
        margin-top: 5%;
        margin-left: 44%;
        h1
            font-size 60px
        p
            font-size 16px

@media screen and (max-width: 646px)
    .lamp_container
        left: calc(50% - 55px);
        width: 110px;
        .light
            top: 97%;
            left: 53%;
            width: 430px;
    
    .text_container
        margin: 144px 20px 0 20px;
        h1
            font-size 46px
        a
            margin-left: calc(50% - 124px);
